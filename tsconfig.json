{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "composite": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "iceoh": ["./packages/iceoh/src/index.ts"]
    }
  },
  "include": ["packages/iceoh/src"],
  "exclude": ["node_modules"]
}
